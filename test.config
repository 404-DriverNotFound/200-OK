server
{
	port 8000
	timeout 200
	cgi_extension .bla
	index_pages index.html
	method GET
	autoindex off
	client_max_body_size 101010

	location /put_test
	{
		client_max_body_size 123
		root YoupiBanane/directory
		method PUT
	}
	location /post_body
	{
		method POST
		client_max_body_size 12322
		root YoupiBanane/directory
		autoindex on
		index_pages temp
	}
	location /directory
	{
		client_max_body_size 4050
		method GET POST
		root YoupiBanane
		index_pages youpi.bad_extension
	}
}